gridtempColum(row, col)
    grid-template-columns repeat(col, 1fr)
    grid-template-rows repeat(row, 1fr)
    

   
body
    margin 0
  
nav
    height 30px
    display grid
    grid-template-columns 2fr 3fr
    margin-bottom 1%
    background-color lightgrey;

    & div
        & .menu
            text-align center
            vertical-align bottom
            background-color lightgrey;

            &__a
            
                margin-left 10%
                text-decoration none
                color black

                &:hover  
                &.active 
                    background-color #f87777 
                    color #f8f8f8
        &_strong
                font-size 15px  
            

        

.images
        width 95%
        display grid
        grid-template-columns repeat(3, 1fr)
        grid-gap 0.5%
        margin auto
        margin-bottom 1%
    
        &__img
            width 100%
            height 100%

.articleR
    width 90%
    margin auto
    display grid
    grid-template-columns repeat(1, 1fr)
    grid-gap 0.5%

    section
        background-color lightgrey;

    &__p
        text-align center
    &__h3 
        text-align center

   

.article
   
    width 90%
    margin auto
    display grid
    grid-template-columns repeat(2, 1fr)
    grid-gap 0.5%
    section
        background-color lightgrey;
    
    &__h3
        text-align center
    &__p
        text-align center

    section
        background-color lightgrey;
        

footer
    background-color lightgrey;
    height 35px
    




.imagesR
    width 300px
    margin auto

    &__img
        width 100%
        height 100%




table
    margin auto
    & img
        width 24px
        height 12px
        border 3px


details 
    & table
        margin 0



width = 900px

@media screen and (max-width: width)
    .images
        grid-template-columns repeat(1, 1fr)
       
        &__img
            margin auto
            height 350px
            width: 600px
        &__a
            margin auto


@media screen and (max-width: width)
    nav 
        height 30%
        & .menu
            gridtempColum(2, 2)
            text-align center
            vertical-align bottom
            & a 
                display inline-block 
                padding 1% 
                color colorText 
                text-decoration: none 
                height 30%
                background-color lightgrey;

@media screen and (max-width: width)     
   .article
     grid-template-columns repeat(1, 1fr) 
     grid-gap 4%
     section 
        grid-template-columns 1fr 1fr    
        & --img
           float left 
           width: 50%
        & --p
           margin-top 25%
           text-align justify   
